{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
