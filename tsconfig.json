{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ],
    "types": [
      "express",
      "jasmine",
      "node",
      "sinon"
    ],
    "baseUrl": ".",
    "paths": {
      "servoblaster": [
        "@types/servoblaster/servoblaster.d.ts"
      ]
    }
  },
  "include": [
    "core/**/*.ts",
    "routes/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
